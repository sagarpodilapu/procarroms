<%= form_with(model: match, local: true) do |form| %>
  <% if match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
      <% match.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="d-flex justify-content-center" class="form-group row">
    <label class="col-sm-2 col-form-label">Team One</label>
    <div class="col-sm-8">
      <%= form.collection_select :team_one_id, Team.all, :id, :name %>
    </div>
  </div>
  <div class="d-flex justify-content-center" class="form-group row">
    <label class="col-sm-2 col-form-label">Team Two</label>
    <div class="col-sm-8">
      <%= form.collection_select :team_two_id, Team.all, :id, :name %>
    </div>
  </div>
  <div class="d-flex justify-content-center" class="form-group row">
    <label class="col-sm-2 col-form-label">Toss</label>
    <div class="col-sm-8">
      <%= form.collection_select :toss_id, Team.all, :id, :name %>
    </div>
  </div>
  <div class="d-flex justify-content-center" class="form-group row">
    <div class="col-sm-10">
      <%= form.submit %>
      <%= link_to 'Add New Team', new_team_path %>
    </div>
  </div>
<% end %>