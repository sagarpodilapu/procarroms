<%= form_with(model: [@match, score], local: true) do |form| %>
  <% if score.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(score.errors.count, "error") %> prohibited this score from being saved:</h2>

      <ul>
      <% score.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :match_id %>
    <!--<%= form.text_field :match_id %>-->
    <%= form.collection_select :match_id, Match.all, :id, :id %>
  </div>

  <div class="field">
    <%= form.label :set %>
    <%= form.text_field :set, :value => @new_set, :disabled => true %>
  </div>

  <div class="field">
    <%= form.label :score %>
    <%= form.number_field :score, min: 1, max: 29 %>
  </div>

  <div class="field">
    <%= form.label :team_id %>
    <%= form.collection_select :team_id, Team.all, :id, :name  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
