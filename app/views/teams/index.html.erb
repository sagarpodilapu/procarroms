<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="container-fluid">
    <div> 
      <%= link_to 'New Team', new_team_path, class: "btn btn-primary float-right ml-2" %>
      <%= link_to 'All Matches', matches_path, class: "#{@flag} btn btn-success float-right " %>
    </div>
  </div>
</div><br/>

<div class="container">
  <div class="row">
    <% @teams.each do |team| %>
      <div class="col-12 col-md-4 col-sm-6 my-4">
        <div class="card border border-dark">
          <div class="card-body ">
            <div class="card-title text-center">
              <div class="card-title font-weight-bold h3" align="center">
                Team: <%= team.name %>
              </div>
              <div class="card-title font-weight-bold h3" align="center">
                <%= link_to 'View Members', team_members_path(team), class: "btn btn-success" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>