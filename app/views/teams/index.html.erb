<br/>
<div class="container-fluid">
  <div class="container-fluid">
    <div> 
      <button type="button" class="btn btn-info float-right ml-2" data-toggle="modal" data-target="#newTeamModal">New Team
      </button>
      <%= link_to 'All Matches', matches_path, class: "#{@flag} btn btn-primary float-right" %>
    </div>
  </div>
</div><br/>

<div class="container">
  <div class="row">
    <% @teams.each do |team| %>
      <div class="col-12 col-md-4 col-sm-6 my-4">
        <div class="card border border-dark">
          <div class="card-body ">
            <div class="card-title text-center">
              <div class="card-title font-weight-bold h3" align="center">
                Team: <%= team.name %>
              </div>
              <div class="card-title font-weight-bold h3" align="center">
                <%= link_to 'View Members', team_members_path(team), class: "btn btn-success" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="newTeamModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Team</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'form', team: @team %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id='add-new-team' class="btn btn-success">Save changes</button>
      </div>
    </div>
  </div>
</div>