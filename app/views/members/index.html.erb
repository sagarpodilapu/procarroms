<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.team.name %></td>
        <td><%= member.user.name %></td>
        <td><%= link_to 'Show', team_member_path(@team, member) %></td>
        <td><%= link_to 'Edit', edit_team_member_path(@team, member) %></td>
        <td><%= link_to 'Destroy', team_member_path(@team, member), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_team_member_path(@team) %>
