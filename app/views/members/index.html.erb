<table>
  <thead>
    <tr>
      <!--<h3 align="center"><%= @team.name %></h3>-->
    </tr>
  </thead>
</table>
<br/>
<div class="container-fluid">
  <div class="container-fluid">
    <div> 
      <%= link_to 'Add Member', new_team_member_path(@team), class: "btn btn-primary float-right ml-2" %>
      <%= link_to 'All Matches', matches_path, class: "#{@flag} btn btn-success float-right " %>
    </div>
  </div>
</div><br/><br/>

<div class="container-fluid">
  <div class="row">
    <% @members.each do |member| %>
      <div class="col-12 col-md-4 col-sm-6 my-4">
        <div class="card border border-dark">
          <!--<img src="/assets/user1.jpg" alt="User Image" class="rounded float-left img-thumbnail">-->
          <div class="card-body">
            <div class="card-title text-center">
              <div class="card-title font-weight-bold h4" align="center">
                User Name: <%= member.user.name %>
              </div>
              <div class="card-title font-weight-bold font-italic h4" align="center">
                Team: <%= @team.name %>
              </div>
              <div class="card-title h3" align="center">
                <%= link_to 'Remove', team_member_path(@team, member), method: :delete, data: { confirm: 'Are you sure?' }, class: "font-italic font-weight-bold btn btn-danger"%>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>